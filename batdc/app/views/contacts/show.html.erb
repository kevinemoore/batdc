<h3> <%= @contact.first %> <%= @contact.last%> </h3>
<h4> <%= @contact.status %> </h4>
<table>
<tr><td>School</td><td>
    <% if @contact.school %>
        <%= @contact.school.official_name %>
    <% else %>
        NOT SPECIFIED
    <% end %>
</td></tr>
<tr><td>Title</td><td><%= @contact.title %></td></tr>
<tr><td>Role</td><td><%= @contact.role %></td></tr>
<tr><td>Email</td><td><%= @contact.email_primary %></td></tr>
<% if @contact.email_secondary %>
    <tr><td>Email</td><td><%= @contact.email_secondary %></td></tr>
<% end %>
<tr><td>Phone</td><td><%= @contact.work_phone %></td></tr>
<tr><td>Subject Area</td><td><%= @contact.subject_area %></td></tr>
</table>

<h4>Notes:</h4>
<div><p>
<%= @contact.notes %>
</p></div>

<table>
<tr><th>Teaches:</th></tr>
<% @contact.grades_taught.each do |g| %>
<tr><td><%= g %></td></tr>
<% end %>
</table>

<%= link_to 'Edit', edit_contact_path(@contact) %>
<%= link_to 'Back', contacts_path %>
