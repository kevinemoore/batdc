
<div class="row col-xs-12 col-sm-12 col-md-12">
    <%= form_tag(contacts_path, :method => "get", role: "search", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control col-md-4 col-sm-4 col-xs-6", placeholder: "Search Contacts" %>
    <% end %>
</div>

<table class="col-xs-12 col-sm-12 col-md-12">
<tr>
<th>Name</th>
<th>Email</th>
<th>Role</th>
<th>School</th>
</tr>
<% @contacts.each do |c| %>
<% name = "#{c.last}, #{c.first}" %>
<tr>
<td><%= link_to name, c %></td>
<td><%= c.email_primary %></td>
<td><%= c.role %></td>
<% if c.school %>
    <td><%= link_to c.school.official_name, c.school %></td>
<% else %>
    <td> NOT SPECIFIED </td>
<% end %>
</tr>
<% end %>
</table>

<%= will_paginate @contacts %>

<%= link_to 'New', new_contact_path() %>
<%= link_to 'Back', contacts_path %>
