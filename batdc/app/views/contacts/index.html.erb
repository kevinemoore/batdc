<div class="row">
    <%= form_tag(contacts_path, :method => "get", role: "search", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control col-md-4 col-sm-4 col-xs-6", placeholder: "Search Contacts" %>
        <!-- <%= select_tag(:at_school, options_from_collection_for_select(School.all, :id, :name), class: "col-md-4 col-sm-4 col-xs-6") %> -->        
    <% end %>
    <%= button_to('New', new_contact_path(), method: :get) %>
    <% if params[:search] %>
        <%= link_to('Email', email_contacts_path() + '?search=' + params[:search], method: :get) %>
    <% else %>
        <%= link_to('Email', email_contacts_path(), method: :get) %>
    <% end %>
</div>

<table class="span-12 col-xs-12 col-sm-12 col-md-12">
<tr>
<th>Name</th>
<th>Email</th>
<th>Role</th>
<th>School</th>
</tr>
<% @contacts.each do |c| %>
<% name = "#{c.last}, #{c.first}" %>
<tr>
<td><%= link_to name, c %></td>
<td><%= mail_to c.email_primary %></td>
<td><%= c.role %></td>
<% if c.school %>
    <td><%= link_to c.school.official_name, c.school %></td>
<% else %>
    <td> NOT SPECIFIED </td>
<% end %>
</tr>
<% end %>
</table>

<div class="span-12"
<%= will_paginate @contacts %>
</div>
