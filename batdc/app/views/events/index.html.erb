
<div class="row col-xs-12 col-sm-12 col-md-12">
    <%= form_tag(events_path, :method => "get", role: "search", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control col-md-4 col-sm-4 col-xs-6", placeholder: "Search Events" %>
    <% end %>
</div>

<table class="col-xs-12 col-sm-12 col-md-12">
<tr>
<th>Name</th>
<th>Start</th>
<th>End</th>
</tr>
<% @events.each do |e| %>
<tr>
<td><%= link_to e.event_name, e %></td>
<td><%= e.start_date %></td>
<td><%= e.end_date %></td>
</tr>
<% end %>
</table>

<div class ="row col-xs-12 col-sm-12 col-md-12">
<%= will_paginate @events %>
<%= link_to 'New', new_event_path %>
</div>
