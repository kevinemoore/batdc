<div class="container-fluid"
    <div class="row">
        <%= f.label :event_name, class: "col-sm-2" %>
        <%= f.text_field :event_name, class: "col-sm-4" %>
        
        <%= f.label :series, class: "col-sm-2" %>
        <%= f.text_field :series, class: "col-sm-4" %>    
        
        <%= f.label :eventbrite_id, class: "col-sm-2" %>
        <%= f.number_field :eventbrite_id, class: "col-sm-4" %>
        
        <%= f.label :venue, class: "col-sm-1"%>
        <%= collection_select(:event, :school_id, School.all.order(:name), :id, :name, include_blank: true, class: "col-sm-5") %>
    </div>
    
    <div class="row">
        <%= f.label :start_date, class: "col-sm-2 col-xs-4" %>
        <%= f.date_field :start_date, class: "col-sm-4 col-xs-8"%>
        
        <%= f.label :end_date, class: "col-sm-2 col-xs-4" %>
        <%= f.date_field :end_date, class: "col-sm-4 col-xs-8"%>
    </div>
    
    <div class="row">
        <%= f.label :url, class: "col-sm-2" %>
        <%= f.text_field :url, class: "col-sm-4" %>

        <%= f.label :num_sessions, class: "col-sm-2" %>
        <%= f.number_field :num_sessions, class: "col-sm-4" %>    
    </div>
    <div class="row">
            
        <div class="row">
            <%= f.label :description, class: "col-sm-2 col-xs-4" %>
            <%= f.text_area :description, class: "col-sm-4 col-xs-8", rows: 6 %>
            
            <%= f.label :notes, class: "col-sm-2 col-xs-4" %>
            <%= f.text_area :notes, class: "col-sm-4 col-xs-8", rows: 6 %>
        </div>
    </div>
</div>

