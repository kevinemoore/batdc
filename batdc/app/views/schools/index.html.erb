<div class="row">
    <div class="col-sm-2"><h2>Schools</h2></div>
    <%= form_tag(schools_path, :method => "get", class: "navbar-form navbar-left", role: "search", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control col-sm-4", placeholder: "Search Schools" %>
        <button type="submit" class="btn btn-default col-sm-3">Submit</button>
    <% end %>
</div>

<table>
<tr>
<th>Official Name</th>
<th>City</th>
<th></th>
</tr>
<% @schools.each do |s| %>
<tr>
<td><%= link_to s.official_name, s %></td>
<td><%= s.city %></td>
<td><%= button_to 'Edit', edit_school_path(s), method: :get %>
</tr>
<% end %>
</table>

<%= will_paginate @schools %>

<%= link_to 'New', new_school_path() %>
<%= link_to 'Back', schools_path %>
