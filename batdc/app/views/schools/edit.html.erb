<%= simple_form_for @school, method: :patch do |f| %>
    <div class="form-inputs">
        <%= render 'school', :f => f%>

        <div class ="container">
            <div class="row">
                <%= f.submit "Apply", class:  "col-sm-2" %>
                <%= button_tag "Reset", :type => 'reset', class: "col-sm-2" %>
                <%= button_to "Cancel", @school, class: "col-sm-2" %>
            </div>
        </div>
    </div>
<% end %>

