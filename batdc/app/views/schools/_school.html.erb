
<div class="form-group">
    <div class="row">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <%= f.text_field :name, class: "col-sm-4" %>

        <%= f.label :official_name, class: "col-sm-2 control-label" %>
        <%= f.text_field :official_name, class: "col-sm-4" %>
    </div>
    <div class="row">
        <%= f.label :website, class: "col-sm-2 control-label" %>
        <%= f.text_field :website, class: "col-sm-10" %>
    </div>
    <div class="row">
        <%= f.label :office_phone, class: "col-sm-2 control-label" %>
        <%= f.phone_field :office_phone, class: "col-sm-4" %>
        
        <%= f.label :fax, class: "col-sm-2 control-label" %>
        <%= f.phone_field :fax, class: "col-sm-4" %>
    </div>

    <div class="row">
        <%= f.label :address1, class: "col-sm-2 control-label" %>
        <%= f.text_field :address1, class: "col-sm-4" %>
        
        <%= f.label :address2, class: "col-sm-2 control-label" %>
        <%= f.text_field :address2, class: "col-sm-4" %>
    </div>

    <div class="row">
        <%= f.label :city, class: "col-sm-2 control-label" %>
        <%= f.text_field :city, class: "col-sm-4" %>

        <%= f.label :state, class: "col-sm-2 control-label" %>
        <%= f.text_field :state, class: "col-sm-1" %>
        
        <%= f.label :zip, class: "col-sm-1 control-label" %>
        <%= f.text_field :zip, class: "col-sm-2" %>
    </div>

    <div class="row">
        <%= f.label :region, class: "col-sm-2 control-label" %>
        <%= f.select :region, ['Bay Area','Southern California','Other'], class: "col-sm-2" %>
    </div>
</div>

<% categories = [:prek, :elementary, :middle, :highschool] %>
<% labels = { :prek => 'Pre-K',
              :elementary => 'Elementary',
              :middle => 'Middle',
              :highschool => 'High School'} %>
 
<div class="form-group col-sm-4" rows="<%= categories.length %>">
    <% categories.each do |c| %>
        <div class="row">
            <label class="control-label col-sm-5"> <%= labels[c] %></label>
            <%= f.check_box c, class: "col-sm-1" %>
        </div>
    <% end %>
</div>

<div class="form-group col-sm-8">
    <%= f.label :notes, class: "col-sm-2 control-label" %>
    <%= f.text_area :notes, class: "col-sm-6", rows: 4 %>
</div>
