<div class="row">
    <%= form_tag(contacts_path, :method => "get", role: "search", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control col-sm-4 col-xs-6", placeholder: "Search Contacts" %>
        <!-- <%= select_tag(:at_school, options_from_collection_for_select(School.all, :id, :name), class: "col-sm-4 col-xs-6") %> -->        
    <% end %>
    <%= button_to('New', new_contact_path(), method: :get) %>
</div>

<table class="span-12 col-xs-12 col-sm-12 col-md-12">
    <% @contacts.each do |c| %>
        <tr>
            <% name = "#{c.last}, #{c.first}" %>
            <td><%= link_to name, c %></td>
            <td><%= phone_number_link c.work_phone %></td>
        </tr>
    <% end %>
</table>

<div class="span-12"
    <%= will_paginate @contacts %>
</div>
